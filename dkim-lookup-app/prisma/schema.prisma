generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // direct connection
}

model DkimRecord {
  id           Int      @id @default(autoincrement())
  dkimSelector String
  dkimDomain   String
  fetchedAt    DateTime @default(now())
  value        String
}
